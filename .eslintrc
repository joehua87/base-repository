{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    // not sure why airbnb turned this on. gross!
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": 0,
    "no-alert": 0,
    "comma-dangle": 0,
    "max-len": 0,
    "semi": [
      2,
      "never"
    ]
  },
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolve": {
      "moduleDirectory": [
        "node_modules",
        "src"
      ]
    }
  },
  "globals": {
    "BaseRepository": true
  }
}